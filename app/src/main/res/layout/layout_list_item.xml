<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_sticky_header_view" />
    <LinearLayout
        android:id="@+id/rl_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="55dp">
    <ImageView
       android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@mipmap/cxz_common_location_car"
        android:id="@+id/ver_logoimage"
        android:layout_width="50dp"
        android:layout_height="50dp" />
        <TextView
            android:gravity="center|left"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="name"
            android:textColor="@color/font_text"
            android:textSize="15sp" />
    </LinearLayout>
    <include
        layout="@layout/view_layout"/>

</LinearLayout>