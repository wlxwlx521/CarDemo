<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vehicle_condition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.com.wlc.cardemo.chatmessage.car.VehicleConditionActivity">
  <include layout="@layout/toolbar_layout"/>
   <include layout="@layout/view_layout"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <car.com.wlc.cardemo.chatmessage.car.view.RadarView
            android:id="@+id/radar_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:innerCircleColor="#fffefe"
            app:innerCircleRadius="35"
            app:outArcwidth="10dp"
            app:outCircleColor="#dbdad7"
            app:progress="82"
            app:textSize="20sp"

            />

        <TextView
            android:id="@+id/check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="正在检测" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">


        <com.like.LikeButton
            android:id="@+id/llike_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_size="25dp"
            app:icon_type="star"
            app:is_enabled="false" />

        <com.like.LikeButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llike_btn2"
            app:icon_size="25dp"
            app:icon_type="star"
            app:is_enabled="false" />

        <com.like.LikeButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llike_btn3"
            app:icon_size="25dp"
            app:icon_type="star"
            app:is_enabled="false" />

        <com.like.LikeButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llike_btn4"
            app:icon_size="25dp"
            app:icon_type="star"
            app:is_enabled="false" />

        <com.like.LikeButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llike_btn5"
            app:icon_size="25dp"
            app:icon_type="star"
            app:is_enabled="false" />
    </LinearLayout>


</LinearLayout>
