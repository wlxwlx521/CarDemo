<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="car.com.wlc.cardemo.fragment.MyDataFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="我的车辆"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_data"
        android:layout_weight="1"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        android:layout_gravity="center"
        android:scrollIndicators="bottom"
        app:tabIndicatorColor="#1A88A4"
        app:tabSelectedTextColor="#1A88A4"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/data_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></android.support.v4.view.ViewPager>

</LinearLayout>
